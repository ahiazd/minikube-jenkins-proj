podTemplate(containers: [
    containerTemplate(name: 'alpine', image: 'alpine:latest', command: 'sleep', args: '99d'),
    
  ]) {

    node(POD_LABEL) {
        stage('Hello Python') {
            container('alpine') {
                stage('Hello') {
                    sh '''
                    echo "This is a scripted pipeline running as an agnet... "                  
                    '''
                    
                }
            }
        }
    }
        
}
