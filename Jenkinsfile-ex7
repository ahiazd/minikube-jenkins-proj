podTemplate(containers: [
    containerTemplate(name: 'mypython', image: 'ahiaz:latest', command: 'sleep', args: '99d'),
    
  ]) {

    node(POD_LABEL) {
        stage('Hello Python') {
            container('mypython') {
                stage('Hello') {
                    sh '''
                    git clone https://github.com/ahiazd/minikube-jenkins-proj.git;
                    ls -lart
                    echo "OS version: "
                    cat /etc/os-release            
                    '''
                    
                }
            }
        }
    }       
}
