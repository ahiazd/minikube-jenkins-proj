podTemplate(containers: [
    containerTemplate(name: 'mypython', image: 'dockeragent:latest', command: 'sleep', args: '99d'),   
  ]) {

    node(POD_LABEL) {
        stage('Hello Python') {
            container('mypython') {
                stage('Hello') {
                    sh '''
                    echo "Hello Docker agent"
                    [ -f /tmp/zip_job.sh ] && echo "zip_job.sh EXIST at /tmp ."; ./tmp.zip_job.sh || echo "FILE does not exist."
                    cat /etc/os-release
                    '''
                    
                }
            }
        }
              
    }
        
}
