pipeline {
  agent { dockerfile true}
   stages {
    stage ('BUILD') {
     steps {
         sh '''
         ls /tmp | grep zip_job.sh
         echo 'running zip_job script'
         ls -latr
         [ -d scripts ] && cp /tmp/zip_job.sh ./scripts || mkdir scripts; 
         cp /tmp/zip_job.sh ./scripts
         sh /tmp/zip_job.sh
         echo ' list all zip files that created :'
         ls -lart | grep zip
         '''
       }
      }
    }
  }
