pipeline {
  agent { label 'master'}
   stages {
    stage ('BUILD') {
     steps {
         sh '''
         ls /tmp | grep zip_job.sh
         echo 'running zip_job script'
         ls -latr
         [ -d scripts ] && cp /tmp/zip_job.sh ./scripts || mkdir scripts; 
         cp /tmp/zip_job.sh ./scripts
         sh /tmp/zip_job.sh
         echo ' list all txt and  zip files that created :'
         ls -lart | grep .txt
         ls -lart | grep zip
         rm -rf ./scripts; rm *.zip *.txt;
         ls -lart
         '''
       }
      }
    }
  }
