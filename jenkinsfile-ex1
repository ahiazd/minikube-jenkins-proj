podTemplate(containers: [
    containerTemplate(name: 'mypython', image: 'cetnos7-ahiaz:latest', command: 'sleep', args: '99d'),
    
  ]) {

    node(POD_LABEL) {
        stage('Hello Python') {
            container('mypython') {
                stage('Hello') {
                    sh '''
                    echo "This is a scripted pipeline running as an agnet... "     
                    #git clone https://github.com/ahiazd/minikube-jenkins-proj.git
                    ls -lart
                    cd /home/jenkins/agent/workspace; 
                    ls -lart
                    cat /etc/release-os
                    '''
                    
                }
            }
        }
    }
        
}
